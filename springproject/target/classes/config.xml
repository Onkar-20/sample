    	</property>    	
    	<property name="studentname">
    		<value>onkar</value>
    	</property>
    	
    	<property name="studentcity">
    		<value>solapur</value>
    	</property>
    	
    
    </bean>
    
    
    
   <bean class="com.spring.springproject.student" name="student2">
    	<property name="studentid" value="2"/>
    		 	
    	<property name="studentname" value="salman"/>
    	
    	
    	<property name="studentcity" value="solapur"/>
    		
    	
    
    </bean>
  
  
    <bean class="com.spring.springproject.student" name="student3"  p:studentid="3" p:studentname="sandhya" p:studentcity="solapur"/>
  
  
  </beans>